<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


  <com.google.android.material.tabs.TabLayout
      android:id="@+id/tabsOne"
      app:tabMode="scrollable"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>

  <com.google.android.material.tabs.TabLayout
      android:id="@+id/tabsTwo"
      app:tabMode="scrollable"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>

  <com.google.android.material.tabs.TabLayout
      android:id="@+id/tabsThree"
      app:tabMode="fixed"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>

  <com.gaohui.xtablayout.XTabLayout
      android:id="@+id/tabsFour"
      app:x_tabMode="scrollable"
      app:x_tabIndicatorAnimation="true"
      android:layout_width="match_parent"
      android:layout_height="45dp"/>

  <com.gaohui.xtablayout.XTabLayout
      android:id="@+id/tabsFive"
      app:x_tabMode="scrollable"
      android:layout_marginTop="15dp"
      app:x_tabIndicatorAnimation="false"
      app:x_tabIndicatorRoundRect="true"
      android:layout_width="match_parent"
      android:layout_height="30dp"/>

  <com.gaohui.xtablayout.XTabLayout
      android:id="@+id/tabsSix"
      android:layout_width="match_parent"
      android:layout_height="42dp"
      app:x_tabBackground="@android:color/transparent"
      app:x_tabIndicatorAnimation="true"
      app:x_tabIndicatorColor="#000000"
      app:x_tabIndicatorHeight="3dp"
      app:x_tabIndicatorWidth="18dp"
      app:x_tabMode="scrollable"
      app:x_tabPaddingEnd="8dp"
      app:x_tabPaddingStart="8dp"
      app:x_tabSelectedTextColor="#000000"
      app:x_tabTextColor="@color/x_hint_color" />

  <androidx.viewpager.widget.ViewPager
      android:id="@+id/viewPager"
      android:layout_width="match_parent"
      android:layout_height="match_parent"/>

</LinearLayout>
